@using Microsoft.AspNet.Identity



@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Home Collection Services</h2>
    </div>

    @if (Request.IsAuthenticated)
    {
        
        if (User.IsInRole("Customer"))
        {
            <div class="container">
                <h1><strong>Going on a Vacation?</strong></h1>
                <p>If you want to cancel your pickup for the time you'll be away, you can!</p>
                <p>@Html.ActionLink("Go On a Vacation", "Index", "Vacations") &raquo;</p>
            </div>

        }
        else if (User.IsInRole("Employee"))
        {
            <div class="container">
                <h1><strong>Check Your Route</strong></h1>
                <p>Click here to see your route</p>
                <p>@Html.ActionLink("Today's Route", "Index", "Addresses") &raquo;</p>
            </div>
        }
    }
    else
    {
            <div class="container">
                <h1><strong>New to Rubbish Removal?</strong></h1>
                <p>Sign up today and we'll start collecting your rubbish tomorrow.</p>
                <p>@Html.ActionLink("Sign Up Now", "Register", "Account") &raquo;</p>
            </div>
        }
    
